set $mod Mod4

set $ws1 "1:Personal"
set $ws2 "2:Null Lines"
set $ws3 "3:Ikara"
set $ws4 "4:Scratch"

set $ws5 "5:Personal"
set $ws6 "6:NullLines"
set $ws7 "7:Ikara"
set $ws8 "8:Scratch"

set $monitor-a DisplayPort-0
set $monitor-b DVI-0

font pango: DejaVu Sans, FontAwesome 10

floating_modifier $mod

# browser pop-ups
for_window [window_role="pop-up"] floating enable

# Others
for_window [class="(?i)Solaar"] floating enable

# No borders on browser windows
for_window [window_role="^browser"] border none


# use tiling mode only for main/chat Skype window and floating of all dialogs
for_window [class="(?i)skype" title="Skype™|Call with|File Transfers"] floating disable
for_window [class="(?i)skype"] floating enable
for_window [class="(?i)synergy"] floating enable

exec --no-startup-id "i3-msg 'workspace 5:Personal; append_layout ~/.dotfiles/i3/5personal.json'"
exec --no-startup-id gnome-terminal --role=mholman-terminal
exec --no-startup-id slack

exec --no-startup-id "i3-msg 'workspace 6:NullLines; append_layout ~/.dotfiles/i3/6nulllines.json'"
exec --no-startup-id gnome-terminal --role=nulllines-terminal-1 --working-directory=$HOME/Projects/nulllines/stackbin
exec --no-startup-id gnome-terminal --role=nulllines-terminal-2 --working-directory=$HOME/Projects/nulllines/stackbin

exec --no-startup-id "i3-msg 'workspace 7:Ikara; append_layout ~/.dotfiles/i3/7ikara.json'"
exec --no-startup-id gnome-terminal --role=ikara-terminal-1 --working-directory=$HOME/Projects/ikara/ikara-devops
exec --no-startup-id gnome-terminal --role=ikara-terminal-2 --working-directory=$HOME/Projects/ikara -x env EXECUTE_COMMAND="ikara-devops/compose.sh logs -f" bash

workspace $ws1 output $monitor-a
workspace $ws2 output $monitor-a
workspace $ws3 output $monitor-a
workspace $ws4 output $monitor-a

workspace $ws5 output $monitor-b
workspace $ws6 output $monitor-b
workspace $ws7 output $monitor-b
workspace $ws8 output $monitor-b

exec --no-startup-id keepass2

# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the first scratchpad window
bindsym $mod+minus scratchpad show

for_window [class="(?i)KeePass"] move to scratchpad

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# dont move the mouse for me!
mouse_warping none

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
# bindsym $mod+d exec dmenu_run
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
#bindsym $mod+d exec --no-startup-id i3-dmenu-desktop

bindsym $mod+d exec --no-startup-id rofi -show drun

# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

bindsym Ctrl+Shift+Mod1+Up move container to workspace prev_on_output; workspace prev_on_output
bindsym Ctrl+Shift+Mod1+Down move container to workspace next_on_output; workspace next_on_output

bindsym Ctrl+Mod1+Up workspace prev_on_output
bindsym Ctrl+Mod1+Down workspace next_on_output

bindsym $mod+Tab workspace back_and_forth

# reload the configuration filee
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode

    # Pressing left will shrink the window’s width.
    # Pressing right will grow the window’s width.
    # Pressing up will shrink the window’s height.
    # Pressing down will grow the window’s height.
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Display a workspace bar
bar {
    position top
    status_command SCRIPT_DIR=~/.dotfiles/i3/i3blocks-contrib i3blocks -c ~/.dotfiles/i3/i3blocks.conf 2>~/i3blocks.log
    tray_output primary

colors {
        background #3f3f3f
        statusline #dcdccc

        focused_workspace  #93b3a3 #3f3f3f #93b3a3
        active_workspace   #ffcfaf #3f3f3f #ffcfaf
        inactive_workspace #636363 #3f3f3f #dcdccc
        urgent_workspace   #dca3a3 #3f3f3f #dca3a3
    }
}


# colors
client.focused              #688060 #688060 #303030 #ffcfaf
client.focused_inactive     #3f3f3f #3F3F3F #7f9f7f #3f3f3f
client.unfocused            #3f3f3f #3F3F3F #DCDCCC #3f3f3f
client.urgent               #dca3a3 #dca3a3 #DCDCCC #3f3f3f



# Compositing
exec --no-startup-id compton --config ~/.dotfiles/x/compton.conf &

# Wallpaper
exec --no-startup-id feh --bg-scale ~/.dotfiles/x/wallpaper.jpg

# Tray applets
exec --no-startup-id gnome-settings-daemon
exec --no-startup-id nm-applet
exec --no-startup-id gtk-redshift
exec --no-startup-id synergy

# Monitor layouts
exec_always --no-startup-id xrandr --output $monitor-a --primary
exec_always --no-startup-id xrandr --output $monitor-b --left-of $monitor-a

# Auto lock
exec --no-startup-id xautolock -secure -time 15 -locker '~/.dotfiles/i3/autolock.sh' &

# change volume or toggle mute
bindsym XF86AudioRaiseVolume exec amixer -q -D pulse sset Master 5%+ && pkill -RTMIN+1 i3blocks
bindsym XF86AudioLowerVolume exec amixer -q -D pulse sset Master 5%- && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMute exec amixer -q -D pulse sset Master toggle && pkill -RTMIN+1

#bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 10
#bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 10

# Locking
bindsym Control+Mod1+Delete exec --no-startup-id ~/.dotfiles/i3/lock.sh
bindsym $mod+l exec --no-startup-id ~/.dotfiles/i3/lock.sh

# screenshots
# area to clipboard
bindsym --release Control+Shift+Print exec "FILE=$(mktemp --suffix=.png); gnome-screenshot -a -f $FILE && xclip -selection c $FILE -t image/png; rm $FILE"

# window to file - print is actually SysReq when alt is pressed
bindsym --release Mod1+Sys_Req exec "FILE=~/Pictures/Screenshot-$(date +%Y-%m-%d-%H:%M:%S).png; gnome-screenshot -B -w -f $FILE; xclip -selection c $FILE -t image/png"

# screen
bindsym --release Print exec "FILE=~/Pictures/Screenshot-$(date +%Y-%m-%d-%H:%M:%S).png; gnome-screenshot -f $FILE; xclip -selection c $FILE -t image/png"

